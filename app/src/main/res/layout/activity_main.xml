<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gardient_black"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo_armonii" />

    <TextView
        android:id="@+id/TextViewAutomatico"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/blanco_otro"
        android:textSize="15sp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/Btn_comenzar"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/degradado_boton"
        android:layerType="hardware"
        android:text="Comenzar "
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

</LinearLayout>