<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro_fondo"
    tools:context=".fragmentMusico.MapaFragmentMusico">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:text="Ubicacion"
            android:textAlignment="center"
            android:textColor="@color/naranja_letras"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.example.ermonii.fragmentMusico.CustomMapView
            android:id="@+id/MapView"
            android:layout_width="match_parent"
            android:layout_height="600dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdate"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/degradado_boton"
            android:layerType="hardware"
            android:text="Ubicarme"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>

</FrameLayout>