<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0C0C0C"
    android:orientation="vertical"
    android:padding="28dp">

    <ImageView
        android:id="@+id/imgMusicoCompleto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_icon"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgVal1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_fill_img" />

        <ImageView
            android:id="@+id/imgVal2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_fill_img" />

        <ImageView
            android:id="@+id/imgVal3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_fill_img" />

        <ImageView
            android:id="@+id/imgVal4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_half" />

        <ImageView
            android:id="@+id/imgVal5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_black_img" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtNombreCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nombre Apellido"
        android:textColor="@color/naranja"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtApodoCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Apodo"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtBiografiaCompleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtEdadCompleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtGeneroCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtEstadoCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtGeneroMusicalCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContactar"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/degradado_boton"
        android:layerType="hardware"
        android:text="Contactar"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

</LinearLayout>
