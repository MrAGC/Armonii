<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    android:background="@drawable/background_gardient_black"
    tools:context=".fragmentLocal.MenuActivityLocal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/oswald"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Crear evento"
            android:textColor="@color/naranja"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.05"
            android:paddingLeft="20dp"
            android:text="Nombre"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/redondear_edittext"
            android:fontFamily="@font/oswald"
            android:hint="Nombre del evento"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.05"
            android:paddingLeft="20dp"
            android:text="Fecha"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtFecha"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@drawable/redondear_edittext"
            android:focusable="false"
            android:fontFamily="@font/oswald"
            android:hint="Selecciona la fecha"
            android:inputType="none"
            android:paddingStart="15dp"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:inputType="time"
            android:letterSpacing="0.05"
            android:paddingLeft="20dp"
            android:text="Hora"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtHora"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/redondear_edittext"
            android:focusable="false"
            android:fontFamily="@font/oswald"
            android:hint="Selecciona la hora"
            android:paddingLeft="15dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.05"
            android:paddingLeft="20dp"
            android:text="Descripción"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtDescripcion"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/redondear_edittext"
            android:fontFamily="@font/oswald"
            android:hint="Descripción"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.05"
            android:paddingLeft="20dp"
            android:text="Duracion (minutos)"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtDuracion"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/redondear_edittext"
            android:fontFamily="@font/oswald"
            android:hint="Duración del evento"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCrearEvento"
            android:layout_width="250dp"
            android:layout_marginTop="40dp"
            android:layout_height="60dp"
            android:background="@drawable/degradado_boton"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.1"
            android:text="C R E A R"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>
</FrameLayout>