<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    android:background="@drawable/background_gardient_black"
    tools:context=".fragmentLocal.MenuActivityLocal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/oswald"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Crear evento"
            android:textColor="@color/naranja"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.05"
            android:paddingLeft="20dp"
            android:text="Nombre"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:background="@drawable/redondear_edittext"
            android:fontFamily="@font/oswald"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.05"
            android:paddingLeft="20dp"
            android:text="Fecha"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="date"
            android:layout_marginBottom="12dp"
            android:background="@drawable/redondear_edittext"
            android:fontFamily="@font/oswald"
            android:hint="DD/MM/AAAA"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.05"
            android:inputType="time"
            android:paddingLeft="20dp"
            android:text="Hora"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:layout_width="350dp"
            android:hint="HH:mm"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/redondear_edittext"
            android:fontFamily="@font/oswald"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.05"
            android:paddingLeft="20dp"
            android:text="DescripciÃ³n"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:background="@drawable/redondear_edittext"
            android:fontFamily="@font/oswald"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.05"
            android:paddingLeft="20dp"
            android:text="Duracion"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/redondear_edittext"
            android:fontFamily="@font/oswald"
            android:inputType="number"
            android:paddingLeft="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Btn_iniciar_sesion"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/degradado_boton"
            android:fontFamily="@font/oswald"
            android:letterSpacing="0.1"
            android:text="C R E A R"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>


</FrameLayout>